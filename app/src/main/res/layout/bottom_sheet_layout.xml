<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idRLBSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_shade_1"
    android:padding="4dp"
    tools:ignore="MissingDefaultResource">

    <!--text view for displaying course name-->
    <TextView
        android:id="@+id/idTVCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="4dp"
        android:text="Name on card"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!--image view for displaying course image-->
    <ImageView
        android:id="@+id/idIVCard"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/idTVCardName"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/cardimg"
        android:padding="4dp" />

    <!--text view for displaying course description-->
    <TextView
        android:id="@+id/idTVCardNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVCardName"
        android:layout_margin="4dp"
        android:layout_toEndOf="@id/idIVCard"
        android:layout_toRightOf="@id/idIVCard"
        android:padding="3dp"
        android:text="Card Number"
        android:textColor="@color/white" />

